@model IEnumerable<Employees_System.Models.Employee>
@{
    ViewBag.Title = "Index";
}
<script src="http://code.jquery.com/jquery-1.11.2.min.js" type="text/javascript"></script>

<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
<h2>Employees List</h2>
<hr />

<button class="">@Html.ActionLink("Add Employee", "AddEmployee", "Employee")</button>

<button class="">@Html.ActionLink("Add Employee Salary", "AddEmployeeSalary", "Employee")</button>

<table class="table">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>City</th>
            <th>Zip</th>
        </tr>
    </thead>


    <tbody>
        @foreach (var employees in Model)
        {
            <tr>
                <td>@employees.Id</td>
                <td>@employees.FirstName</td>
                <td>@employees.LastName</td>
                <td>@employees.City</td>
                <td>@employees.Zip</td>
                <td>
                    <input type="button" class="btn-bootstrap-dialog btn btn-success" value="Edit" data-url="@Url.Action("Edit", "Employee", new { Id = employees.Id })" />

                    <input type="button" class="btn-bootstrap-dialog btn btn-default" value="Salary Details" data-url="@Url.Action("ShowEmployeeSalary", "Employee", new { Id = employees.Id })" />


                </td>

            </tr>

        }
    </tbody>
</table>
<script>
    $(document).ready(function () {

        $('.btn-bootstrap-dialog').click(function () {
            var url = $(this).data('url');
            var title = $(this).attr('title');

            $.get(url, function (data) {
                $('#bootstrapDialog').html(data);

                $('#bootstrapDialog').modal('show');
                // alert(title)
                $('#ModalPopUp').find('#myModalLabel').html($(this).attr("title"));
            });


        });

    });
</script>

<div class="modal fade" id="bootstrapDialog" tabindex="-1" role="dialog" aria-labelledby="myModal-label" aria-hidden="true"></div>  





